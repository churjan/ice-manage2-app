/* pick-view */
.mode-wrap{
	border-top: 2rpx solid #eee;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, .5);
	position: fixed;
	z-index: 99;
	left: 0;
	top: 0
}
.picker-body{
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	font-size: 42rpx;
	background: #fff;
}
.indicator-class{
	height: 32px;
}
.mask-class{
	color: red
}
.pick-item{
	height: 32linepx;
	line-height: 32px;
	text-align: center;
}
.picker-head{
	background-color: #fff;
	display: flex;
	height: 45px;
	justify-content: space-between;
	align-items: center;
	padding: 0 15px;
	font-size: 34rpx;
	border-bottom: 1px solid #f8f8f8;
}
