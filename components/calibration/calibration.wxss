/* components/calibration/calibration.wxss */
.calibration{
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
}
.calibration-content{
    position: fixed;
    max-height: 100%;
    overflow: scroll;
    bottom: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    background: #fff;
}
.after-border{
    position: relative;
}
.after-border::after{
    content: '';
    position: absolute;
    bottom: 0;
    margin-left: -50rpx;
    border-top: 1px solid #eee;
    width: 100vw;
}
.calibration-content .title{
    display: flex;
    padding: 0 50rpx;
    justify-content: space-between;
    align-items: center;
    line-height: 100rpx;
    font-weight: bold;
}
.title>image{
    width: 36rpx;
    height: 36rpx;
}
.list-item{
    display: flex;
    padding: 0 50rpx;
    line-height: 100rpx;
    align-items: center;
}
.ice-detail-list .list-item:first-child{
    color: #f7941e;
}
.list-item .item-label{
	padding-right: 50rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.inventory-picture{
    position: relative;
    margin: 30rpx 50rpx 30rpx;
    /* background: #f8f8f8; */
}
.inventory-picture image{
    width: 640rpx;
    height: 480rpx;
}
.inventory-picture .image{
    width: 650rpx;
    height: 487rpx;
}

.match-list{
    display: flex;
    padding: 0 50rpx;
    flex-flow: row wrap;
    padding-bottom: 20rpx;
    justify-content: flex-start;
}
.match-list-item{
    border-radius: 4rpx;
    border: 1rpx solid #8a8a8a;
    font-size: 22rpx;
    width: calc(16.66% - 10rpx);
    box-sizing: border-box;
    padding: 6rpx 6rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    text-align: center;

    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.not-margin{
    margin-right: 0;
}
.opera-button{
    display: flex;
    margin-top: 30rpx;
    padding: 0 50rpx;
    font-size: 32rpx;
    justify-content: space-between;
    margin-bottom: 40rpx;
}
.opera-button view{
    width: 300rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border: 3rpx solid #f7941e;
    border-radius: 10rpx;
    color: #f7941e;
}
.opera-button view.confirm{
    background: #f7941e;
    color: #fff;
}
.isSelecting{
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 2;
}
.second-float{
    width: 610rpx;
    background: #fff;
    border-radius: 10rpx;
    padding: 0 30rpx;
}
.shop-info{
    display: flex;
    justify-content: space-between;
    line-height: 100rpx;
    border-bottom: 1rpx solid #eee;
}
.select-box{
    display: flex;
    position: relative;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    width: 540rpx;
    height: 100rpx;
    border-radius: 10rpx;
    border: 2rpx solid #8a8a8a;
    margin: 34rpx auto;
}
.select-box input{
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    flex: 1;
}
.select-box input .place-class{
    color: #ababab;
}
.select-box .search{
    width: 33rpx;
    height: 20rpx;
    transition: all .4s;
}
.has-search{
    transform: rotate3d(0,0,1,180deg)
}
.options{
    position: absolute;
    left: 0;
    top: 110rpx;
    width: 100%;
    background: #fff;
    border-radius: 10rpx;
    max-height: 400rpx;
    overflow: scroll;
    border: 1rpx solid #eee;
}
.option-item{
    padding: 18rpx 30rpx;
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.option-item::first-child{
    padding-top: 28rpx;
}
.sellect-confirm{
    border-top: 1rpx solid #eee;
    text-align: center;
    color: #f7941e;
    line-height: 100rpx;
}
.no-change-click{
    background: #60c0bd;
    color: #fff;
    border-color: #60c0bd;
}
.change-click{
    background: red;
    color: #fff;
    border-color: red;
}
.current-boxes{
    background: rgba(96, 192, 189, 0.6);
}
.boxes{
    position: absolute;
}
.selected{
    color: #60c0bd;
}
.modify{
    border: 1rpx solid red;
}