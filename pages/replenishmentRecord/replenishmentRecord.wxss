/* pages/replenishmentRecord/replenishmentRecord.wxss */
@import "../../template/date-picker/date-picker.wxss";
.search-item-box{
	background: #f8f8f8;
	padding: 25rpx 0;
	border-bottom: 1rpx solid #ddd;
}
.ice-header{
	width: calc(100vw - 60rpx);
	height: 90rpx;
    line-height: 90rpx;
    margin:auto;
	background: #fff;
	font-size: 34rpx;
	color: #6f6f6f;
	border-radius: 20rpx;
	border: 1rpx solid #f3f3f3;
	box-shadow: 1px 1px 10px #f3f3f3;
}
.ice-search{
    height: 100%;
    line-height: 90rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
	color: #ababab;
    font-size: 34rpx;
}
.ice-search text{
	display: inline-block;
	width: 200rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
	color: #333;
}
.ice-search text:nth-of-type(1){
	padding-right: 30rpx;
}
.date-icon{
	width: 32rpx;
	height: 28rpx;
}

/* container */
.record-container{
    padding: 0 50rpx;
    background: #fff;
}
.col{
    height: 100rpx;
    display: flex;
    align-items: center;
}
.col view:first-child{
    width: 215rpx;
}
.col view:nth-child(2){
    width: 280rpx;
}
.record-container .title{
    font-weight: 600;
    font-size: 30rpx;
}
.total{
    border-top: 1rpx solid #ddd;
    font-size: 28rpx;
}
.record-item{
    font-size: 28rpx;
    border-top: 1rpx solid #ddd;
    background: url(data:image/png;base64,) right center/17rpx 30rpx no-repeat;
}
.item-shop-name{
    padding-right: 60rpx;
    box-sizing: border-box;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
